<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Octopus project">
	<meta name="author" content="E Mercadal">
	<link rel="shortcut icon" href="{{ asset('logo.png') }}">

	<!-- Bootstrap 5 -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

	<link href="{{ asset('css/main.css') }}" rel="stylesheet">

	<title>{% block title %}Octopus project!{% endblock %}</title>
	{% block stylesheets %}{% endblock %}
</head>
<body>
<!-- NAVIGATION
============================================================ -->
<header id="page-top">
	<div class="nav">
		<div class="navbar d-flex justify-content-between p-0 w-100">
			<div class="logo m-5 flex-fill"><img src="{{ asset('logo.png') }}" alt="Octopus project!"></div>
			<div class="navbar_links">
				<ul class="d-flex flex-row me-5">
					<li class="me-4"><a href="{{ path('octopus_index') }}">My friends</a></li>
					<li class="me-4"><a href="{{ path('octopus_fun_facts') }}">Fun facts</a></li>
				</ul>
			</div>
		</div>
	</div>
</header>

<!-- BODY
============================================================ -->
<div class="m-3">
	{% for message in app.session.flashbag.get('success') %}
		<div class="alert alert-success pb-0 w-75 m-auto" role="alert">
			<p class="text-center">{{ message }}</p>
		</div>
	{% endfor %}
	{% for message in app.session.flashbag.get('error') %}
		<div class="alert alert-danger pb-0" role="alert">
			<p class="text-center">{{ message }}</p>
		</div>
	{% endfor %}
</div>

{% block body %}{% endblock %}

<!-- FOOTER
============================================================ -->
<div id="footer">
	<div class="d-flex justify-content-end w-100">
		<p class="mx-5 mt-3">Tous droits réservés &copy; 2023 - Emmanuelle Mercadal</p>
	</div>
</div>

{% block javascripts %}
	<script src="https://use.fontawesome.com/b1a2104cde.js"></script>
{% endblock %}
</body>
</html>
