{% extends 'base.html.twig' %}

{% block body %}
	<div class="text-center w-50 mx-auto" id="octopus-index-container">
		<div class="card">
			<div class="card-body">
				<p>Hello! My name is {{ app.user.name}} and I'm an octopus 👋🏼</p>
				<p>
					My mood today is {{ mood }}
					<br>
					I am currently {{ isOctopusSleeping ? 'sleeping peacefully 😴 in the bottom of the ocean.' : 'looking for friends 🐠 in the vastness of the ocean.' }}
				</p>
			</div>
		</div>

		<div class="card mt-3 mb-5">
			<div class="card-body">
				<p>Meet my friends</p>
				<div>
					{% for friendName, friendType in friends %}
						<div class="mb-1"> My friend {{ friendName }} is a {{ friendType|lower }}</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
